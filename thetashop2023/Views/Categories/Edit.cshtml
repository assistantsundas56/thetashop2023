@model Category


<h1>
    @ViewBag.Message
</h1>



<form asp-action="Edit" asp-controller="Categories" method="post">

    <input type="text" asp-for="Name" value="@Model.Name" />
    <input type="text" asp-for="Description" value="@Model.Description" />


    <input type="hidden" asp-for="Id" value="@Model.Id" />



    <input type="submit" value="Update" />

</form>