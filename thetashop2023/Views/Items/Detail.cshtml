@model Item


<h1>Item details for @Model.Name</h1>

<div class="row">




    <div class="col-md-6">

        @{
            string MainImage = "/data/items/default.jpg";
            string[] AllImages = null;
            if (Model.Images != null)
            {
                AllImages = Model.Images.Split(",");
                MainImage = AllImages[0];
            }

        }



        <img src="@MainImage" class="bigimage img-thumbnail" style="max-height:300px;" alt="" />



        <div class="row">

            @for (int i = 0; i < AllImages.Length; i++)
            {
                <img src="@AllImages[i]" data-imagepath="@AllImages[i]" class="smallimages col-md-3 img-thumbnail" style="max-height:80px;" alt="" />
            }
        </div>




    </div>












    <div class="col-md-6">
        <ul>
            <li>
                Id: @Model.Id
            </li>
            <li>
                Name: @Model.Name
            </li>
            <li>
                Status: @Model.Status
            </li>
            <li>
                Des: @Model.ShortDescription
            </li>
            <li>
                Des: @Model.LongDescription
            </li>
        </ul>
    </div>

</div>




<a href="/Items/Index">View All Items</a>




@section ABC{


    <script>


        $(function () {


            $("img").draggable();



            $(".smallimages").click(function () {

                var SmallImagePath = $(this).data("imagepath");
                //alert(SmallImagePath);


                $(".bigimage").attr("src", SmallImagePath);

            });





        });



    </script>


}
